{
  "name": "create-knyt",
  "version": "0.3.0",
  "description": "A scaffolding tool to generate new Knyt projects from boilerplates.",
  "author": "Morris Allison III (https://morris.xyz)",
  "license": "BSD-3-Clause",
  "bugs": "https://github.com/sables-app/knyt/issues",
  "homepage": "https://knyt.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sables-app/knyt.git",
    "directory": "packages/create"
  },
  "keywords": [
    "knyt",
    "boilerplate",
    "cli",
    "create",
    "project generator",
    "quickstart",
    "scaffolding tool"
  ],
  "type": "module",
  "exports": {
    ".": "./main.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "create-knyt": "bin/create-knyt.bundle.js"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@clack/prompts": "^0.11.0",
    "picocolors": "^1.1.1"
  },
  "scripts": {
    "build": "bun build --format=esm --target=node --packages=bundle --outfile=bin/create-knyt.bundle.js --banner='#!/usr/bin/env node' ./create-knyt.ts",
    "watch": "bun build --format=esm --target=node --packages=bundle --outfile=bin/create-knyt.bundle.js --banner='#!/usr/bin/env node' ./create-knyt.ts --watch"
  },
  "files": [
    "bin",
    "boilerplate",
    "main.js",
    "!__tests__",
    "!*.tsbuildinfo"
  ]
}