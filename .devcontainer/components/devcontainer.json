{
  "name": "Knyt Components",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "workspaceMount": "type=volume,src=knyt-volume,target=/workspace",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3000],
  "postCreateCommand": "bun create knyt@latest --kind=components --force . && bun install"
}
